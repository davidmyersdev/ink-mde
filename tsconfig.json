{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./tmp/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "/*": ["./*"],
      "ink-mde": ["./src/index"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "node"
    ],
    "useDefineForClassFields": true
  },
  "exclude": ["./tmp", "./vue"],
  "include": ["./**/*.d.ts", "./**/*.ts"]
}

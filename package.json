{
  "name": "@writewithocto/ink",
  "version": "v0.7.1",
  "author": "David R. Myers <davidrmyersii@gmail.com>",
  "description": "The flexible TypeScript Markdown editor that powers https://octo.app.",
  "license": "MIT",
  "main": "./dist/ink.cjs",
  "module": "./dist/ink.js",
  "repository": "https://github.com/writewithocto/ink.git",
  "type": "module",
  "types": "./types/ink.d.ts",
  "typings": "./types/ink.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ink.js",
      "require": "./dist/ink.cjs"
    },
    "./vue": {
      "import": "./packages/vue/dist/ink.js",
      "require": "./packages/vue/dist/ink.cjs"
    }
  },
  "scripts": {
    "build": "yarn build:root && yarn vue:build",
    "build:root": "tsc && vite build && tsc --project tsconfig.types.json",
    "dev": "vite",
    "docs:check": "embedme --verify README.md",
    "docs:diff": "embedme --stdout README.md",
    "docs:update": "embedme README.md",
    "prepack": "yarn build",
    "test": "vitest",
    "test:once": "vitest run",
    "vue:build": "yarn workspace @writewithocto/vue-ink build"
  },
  "dependencies": {
    "@codemirror/commands": "^0.20.0",
    "@codemirror/lang-markdown": "^0.20.1",
    "@codemirror/language": "^0.20.2",
    "@codemirror/language-data": "^0.20.0",
    "@codemirror/search": "^0.20.1",
    "@codemirror/state": "^0.20.0",
    "@codemirror/view": "^0.20.6",
    "@lezer/highlight": "^0.16.0",
    "@replit/codemirror-vim": "^0.20.0",
    "deepmerge": "^4.2.2",
    "is-plain-object": "^5.0.0",
    "sinuous": "git+https://github.com/voraciousdev/sinuous.git#live-fork"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.37",
    "@types/node": "^17.0.35",
    "embedme": "git+https://github.com/voraciousdev/embedme.git#live-fork",
    "jsdom": "^19.0.0",
    "svelte": "^3.46.4",
    "svelte-preprocess": "^4.10.3",
    "typescript": "^4.4.3",
    "vite": "^2.9.7",
    "vitest": "^0.14.2"
  },
  "files": [
    "dist",
    "package.json",
    "packages/dist",
    "packages/package.json",
    "packages/src",
    "src",
    "types"
  ],
  "keywords": [
    "codemirror",
    "component",
    "easymde",
    "javascript",
    "js",
    "markdown",
    "mde",
    "octo",
    "sfc",
    "simplemde",
    "ts",
    "typescript",
    "vue",
    "vue3"
  ],
  "packageManager": "yarn@3.2.1",
  "workspaces": [
    ".",
    "packages/*"
  ]
}
